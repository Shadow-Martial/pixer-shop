# Shop Environment for Coolify hosting with caldronflex.com.np
NEXT_PUBLIC_REST_API_ENDPOINT=https://caldronflex.com.np/api
NEXT_PUBLIC_WEBSITE_URL=https://caldronflex.com.np
NEXT_PUBLIC_ADMIN_URL=https://admin.caldronflex.com.np

AUTH_TOKEN_KEY=AUTH_CRED
APPLICATION_MODE=production

# Language Configuration
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Multilang
NEXT_PUBLIC_ENABLE_MULTI_LANG=false
NEXT_PUBLIC_AVAILABLE_LANGUAGES=en

# Payment Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_TOKEN=your_paypal_client_token

# RazorPay
NEXT_PUBLIC_RAZORPAY_KEY=your_razorpay_key

# PayStack
NEXT_PUBLIC_PAYSTACK_KEY=your_paystack_key
